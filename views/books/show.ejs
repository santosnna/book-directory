<% layout('layouts/boilerplate') %>
<div class="row">
	<div class="col-6 offset-3">
		<div class="card mb-3">
			<div class="card-body">
				<h5 class="card-title"><%= book.title %></h5>
				<h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
				<!-- <p class="card-text">
					<strong>Subject:</strong> <%= book.subject %><br />
					<strong>ISBN:</strong> <%= book.isbn %><br />
					<strong>Publishing Date:</strong> <%= book.publishingDate %>
				</p> -->
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<strong>Subject:</strong> <%= book.subject %>
				</li>
				<li class="list-group-item"><strong>ISBN:</strong> <%= book.isbn %></li>
				<li class="list-group-item">
					<strong>Publishing Date:</strong> <%= book.publishingDate %>
				</li>
			</ul>
			<div class="card-body">
				<form
					action="/books/<%= book._id %>?_method=DELETE"
					method="POST"
					class="d-inline"
				>
					<button class="btn btn-danger">Delete book</button>
				</form>

				<a href="/books/<%= book._id %>/edit" class="card-link btn btn-primary"
					>Edit book</a
				>
			</div>
		</div>
		<a href="/books">Back to index</a>
	</div>
</div>
